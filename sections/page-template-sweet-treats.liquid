        <div class="about-img" style="background-image: url({{ block.settings.image | img_url: '1500x' }});"></div>
        <p style="text-transform: uppercase; font-weight: bold; padding: 10px 0px;color:#8f8377;">
          {{block.settings.title}}
        </p>
     </div>
