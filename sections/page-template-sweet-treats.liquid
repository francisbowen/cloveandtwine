      {% if block.settings.overalltitle != '' %}
      <h4 style="width:100%;text-align:center;">{{block.settings.overalltitle }}</h4>
      {% endif %}
          <div class="col-md-30 image-block-item {% unless block.settings.padding %}block-row-content{%endunless%}">
              <h3>{{ block.settings.title_one }}</h3>
                   <span class=" {% if block.settings.insetleft %}insetblock{% endif %}"> {{ block.settings.text_one }} </span>
                 </div>
                 <div class="col-md-30 image-block-item {% unless block.settings.padding %}block-row-content{%endunless%}">
              <h3>{{ block.settings.title_two }}</h3>
                   <span class=" {% if block.settings.insetright %}insetblock{% endif %}"> {{ block.settings.text_two }} </span>
                 </div>
            </div>
          </div>
        </div>

       {% when 'threecolumn' %}
  <div class="three-items four-items txt-center container " >
    <div class="row row-heading_row">
      {% if block.settings.maintitle != '' %}
      <h4 style="width:100%;text-align:center;">{{block.settings.maintitle }}</h4>
      {% endif %}
          	<div class="col-md-20 image-block-item block-row-content">
              	{% if block.settings.image1 %}
          		<div class="about-img" style="background-image: url({{ block.settings.image1 | img_url: '1500x' }});    background-size: contain;
    height: 100px;margin-bottom:20px;"></div>
              	{% endif %}
              	{% if block.settings.title1 != '' %}
              	<h3>{{ block.settings.title1 }}</h3>
              	{% endif %}
              	{% if block.settings.text1 != '' %}
              	{{ block.settings.text1 }}
              	{% endif %}
              	{% if block.settings.bottomimage1 %}
          		<div class="about-img" style="background-image: url({{ block.settings.bottomimage1 | img_url: '1500x' }});    background-size: contain;
    height: 100px;"></div>
              	{% endif %}
          	</div>
          	<div class="col-md-20 image-block-item block-row-content">
              	{% if block.settings.image2 %}
          		<div class="about-img" style="background-image: url({{ block.settings.image2 | img_url: '1500x' }});    background-size: contain;
    height: 100px;margin-bottom:20px;"></div>
              	{% endif %}
              	{% if block.settings.title2 != '' %}
              	<h3>{{ block.settings.title2 }}</h3>
              	{% endif %}
              	{% if block.settings.text2 != '' %}
              	{{ block.settings.text2 }}
              	{% endif %}
              	{% if block.settings.bottomimage2 %}
          		<div class="about-img" style="background-image: url({{ block.settings.bottomimage2 | img_url: '1500x' }});    background-size: contain;
    height: 100px;"></div>
              	{% endif %}
          	</div>
          	<div class="col-md-20 image-block-item block-row-content">
              	{% if block.settings.image3 %}
          		<div class="about-img" style="background-image: url({{ block.settings.image3 | img_url: '1500x' }});    background-size: contain;
    height: 100px;margin-bottom:20px;"></div>
              	{% endif %}
              	{% if block.settings.title3 != '' %}
              	<h3>{{ block.settings.title3 }}</h3>
              	{% endif %}
              	{% if block.settings.text3 != '' %}
              	{{ block.settings.text3 }}
              	{% endif %}
              	{% if block.settings.bottomimage3 %}
          		<div class="about-img" style="background-image: url({{ block.settings.bottomimage3| img_url: '1500x' }});    background-size: contain;
    height: 100px;"></div>
              	{% endif %}
          	</div>
      
      
      


            </div>
          </div>
        </div>

       {% when 'dividertext' %}
        <div class="custom-block text-center" style="margin:50px 0;background-color:{{block.settings.color}};    border-top: 1px solid #cccccc;padding: 50px 0 60px;">
                <div class="inner" style="max-width:1100px;    margin: 0 auto;">
                  <h3 style="text-align: center;font-size: 24px;font-weight: 300; text-transform:uppercase;    margin-bottom: 0px;">
                    {{ block.settings.title}}
                  </h3>
                </div>
             </div>

  {% endcase %}

{% endfor %}
      
