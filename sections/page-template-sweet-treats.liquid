<div class="full-width">
  <div class="container">
    <div class="row">
      <article class="col-lg-30 offset-lg-15 col-md-40 offset-md-10">
        <div class="rte">
          {%- assign start_title = page.content | slice: 0, 3 -%}
          {% if start_title contains 'h1' %}
            {%- assign page_title = page.content | split: '</h1>' -%}
            {{ page_title[1] }}
          {% else %}
            {{ page.content }}
          {% endif %}
        </div>
      </article>
    </div>
  </div>
</div>
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'heading_row' %}
      <div class="full-width full-{{ block.type }}">
        <div class="container about-container">
          <div class="row row-{{ block.type }} align-items-center">
            <div class="col-lg-25 col-md-30 img-with-text {% if block.settings.image_side =='right' %}push-md-30{% else %}offset-lg-5{% endif %}">
              <img src="{{ block.settings.image | img_url: '650x' }}" alt="{{ block.settings.image.alt }}" />
            </div>
            <div class="col-lg-25 col-md-30{% if block.settings.image_side =='right' %} pull-lg-20 pull-md-30{% endif %} text-left rte">
              {% if block.settings.subtitle != blank %}
                <h4>{{ block.settings.subtitle }}</h4>
              {% endif %}
              {% if block.settings.title != blank %}
                <h2>{{ block.settings.title }}</h2>
                <hr />
              {% endif %}
              {{ block.settings.content }}
              {% if block.settings.buttonurl %}
              <p style="text-align: left; font-size: 1.1rem;">
                <span style="font-weight: 400;">
                <a href="{{block.settings.buttonurl}}" target="_blank">
                  <button class="shopnow">{{block.settings.buttontext}}</button>
                  </a>
                </span>
              </p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% when 'image_type' %}
      <div class="full-width full-{{ block.type }}">
        <div class="container-fluid">
          <div class="row row-{{ block.type }}">            
            <div class="col-md-60 text-center row-{{ block.id }}">
              {% if block.settings.image_one  %}
              <img src="{{ block.settings.image_one | img_url: '1500x' }}" alt="{{ block.settings.image.alt }}" />
               {% endif %}
              {% if block.settings.title_one != '' %}
              <h4>{{ block.settings.title_one }}</h4>
              {% endif %}

              {% if block.settings.content_one != '' %}
                                          <div class="col-md-45 stores-wrap text-center" style="padding:0px;">
              {{ block.settings.content_one }}
                                                        	</div>
              {% endif%}
              {% if block.settings.html != '' %}
                            <div class="col-md-45 stores-wrap text-left">
              {{ block.settings.html }}
                                          	</div>
              {% endif %}
              {% if block.settings.buttonurl %}
              <div class="col-md-45 stores-wrap text-center">
                <a style="    background-color: #000;
    border-color: #000;
    color: #fff;
    font: 700 11px/1.35 Roboto, Arial;text-align:center;" id="questionpop" class="btn btn-secondary" href="{{block.settings.buttonurl}}">{{block.settings.buttontext}}</a>
              </div>
              {% endif %}

          </div>
          </div>
        </div>
      </div>

          {% when 'packaging' %}
        <div class="container about-container">
          <div class="row row-heading_row"> 
            <div class="col-md-50 offset-md-5">
                {% if block.settings.image  %}
              <img src="{{ block.settings.image | img_url: '1500x' }}" alt="{{ block.settings.image.alt }}"  class="solution-image" />
               {% endif %}
              <h4 style="text-align:center;">{{ block.settings.title }}</h4>
              <span style="text-align:center;">{{ block.settings.content }}</span>
              <div class="col-md-60 stores-wrap text-left">
              {{ block.settings.html }}
            </div>
            </div>
          </div>
        </div>
  {% when 'half_background_image' %}
