{% if section.settings.show %}
{% include 'custom' %}
{%endif%}
{% schema %}
  {
    "name": "Custom content",
    "class": "index-section1",
    "settings": [
      {
        "type": "checkbox",
        "id": "show",
        "label": "Show this section?",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Custom content"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background color"
      },
      {
        "type": "select",
        "id": "extra_padding",
        "label": "Padding type",
        "options": [
          {
            "value": "normal",
            "label": "Normal"
          },
          {
            "value": "large",
            "label": "Large padding"
          },
          {
            "value": "xlarge",
            "label": "Extra large padding"
          }
        ],
        "default": "normal"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Talk about your brand"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Subheading",
            "default": "Extra info"
          },
          {
            "type": "radio",
            "id": "position",
            "label": "Subheading position",
            "options": [
              {
                "value": "below",
                "label": "Below"
              },
              {
                "value": "above",
                "label": "Above"
              }
            ],
            "default": "below"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          },
          {
            "type": "select",
            "id": "width",
            "label": "Container width",
            "default": "50%",
            "options": [
              {
                "value": "25%",
                "label": "25%"
              },
              {
                "value": "33%",
                "label": "33%"
              },
              {
                "value": "50%",
                "label": "50%"
              },
              {
                "value": "66%",
                "label": "66%"
              },
              {
                "value": "75%",
                "label": "75%"
              },
              {
                "value": "100%",
                "label": "100%"
              }
            ]
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Vertical alignment",
            "default": "align-self-center",
            "options": [
              {"value": "align-self-start", "label": "Top"},
              {"value": "align-self-center", "label": "Middle"},
              {"value": "align-self-end", "label": "Bottom"}
            ]
          },
          {
            "type": "select",
            "id": "align_text",
            "label": "Horizontal alignment",
            "default": "left",
            "options": [
              {"value": "left", "label": "Left"},
              {"value": "center", "label": "Centered"},
              {"value": "right", "label": "Right"}
            ]
          }
        ]
      },
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "width",
            "label": "Container width",
            "default": "50%",
