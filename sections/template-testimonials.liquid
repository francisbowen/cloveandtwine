        <div class="container">
          <div class="testimonials-wrapper" style="max-width: 960px; margin: 0 auto;">
            {% for block in section.blocks %}
            <div class="testimonials-slider row">
              <div class="quotes col-md-15 quotes--{{ block.id }}">
                {% if block.settings.image %}
                  <div class="quotes-slider__image quotes-slider__image-{{ block.settings.position }}" style="background-image:url({{ block.settings.image | img_url:'100x'}});"></div>
                  {% endif %}
                 </div>
                <div class="col-md-40 about-quote ">
                {{ block.settings.content }}
                <em> {{ block.settings.text }}</em>
             
                  </div> 

            </div>
{% unless forloop.last %}<div class="col-md-40 offset-md-15"><hr></div>{% endunless %}
            {% endfor %}
          </div>
        </div>
{% schema %}
{
"name": "Testimonials",
"blocks": [
  
  ],
  "blocks": [
    {
      "type": "select",
      "name": "Add Testimonials",
      "settings": [
         {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Optional"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          },
           {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
      ]

    }
  ]
}
{% endschema %}


 